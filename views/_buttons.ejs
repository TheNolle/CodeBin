<div class="buttons-wrapper">
    <a href="/" class="logo"><%= locals.config.name %></a>
    <div class="buttons">
        <% if (locals.new) { %><a href="/new" class="btn">New</a><% } %>
        <% if (locals.saveable) { %>
            <button class="btn" type="submit">Save</button>
            <div class="password-wrapper">
                <span class="btn">🔏</span>
                <input type="password" name="password" id="password" class="password-input" placeholder="Password (optional)">
            </div> 
        <% } %>
        <% if (locals.id != null) { %><a href="/<%= locals.id %>/duplicate" class="btn">Duplicate</a><% } %>
    </div>
</div>